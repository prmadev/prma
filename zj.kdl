layout {
	default_tab_template {
		pane size=1 borderless=true {
		    plugin location="zellij:tab-bar"
		}
		children
		pane size=2 borderless=true {
		    plugin location="zellij:status-bar"
		}
	}

	tab name="Server" split_direction="vertical" cwd="./" {
		pane name="TAILWIND" command="make" {
			args  "runtw"
		} 
		pane name="HUGO" command="make" {
			args  "runhugo"
		} 
    }
	tab name="Edit" split_direction="vertical" cwd="./" {
		pane borderless=true  name="EDITOR" edit="./"
	}
}
